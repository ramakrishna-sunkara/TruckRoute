<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_activity_grey_background">

    <ImageView
        android:id="@+id/imageview_help_mainimage"
        android:layout_width="@dimen/size_none"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_xxxlarge"
        android:scaleType="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_destination_icon" />

    <TextView
        android:id="@+id/textview_help_title"
        android:layout_width="@dimen/size_none"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_xxlarge"
        android:fontFamily="@font/gotham_bold"
        android:text="@string/about_title"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="@dimen/text_xlarge"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageview_help_mainimage" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textview_help_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing_medium"
        android:layout_margin="@dimen/spacing_normal"
        android:fontFamily="@font/gotham_book"
        android:text="@string/about_app"
        android:textAlignment="center"
        android:textSize="@dimen/text_size_normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textview_help_title" />

</androidx.constraintlayout.widget.ConstraintLayout>