<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ControlButton" parent="Theme.AppCompat.Light">
        <item name="android:layout_width">@dimen/control_button_width</item>
        <item name="android:layout_height">@dimen/control_button_height</item>
        <item name="android:layout_margin">@dimen/control_button_margin</item>
        <item name="android:background">@drawable/action_button</item>
        <item name="android:textColor">@drawable/action_button_text_color</item>
        <item name="android:button">@android:color/transparent</item>
        <item name="android:gravity">center</item>
    </style>


    <style name="style_countdown_settings" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/gotham_bold</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="style_dialog_recalculation_text" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/gotham_book</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="style_edit_text_big" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/gotham_book</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:background">@drawable/background_with_border_main</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:padding">16dp</item>
        <item name="android:textColorHint">@color/color_all_text</item>
    </style>

    <style name="style_edit_text" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/gotham_book</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:background">@drawable/background_with_border_main</item>
        <item name="android:padding">8dp</item>
        <item name="android:textColorHint">@color/color_all_text</item>
    </style>

    <style name="style_app_button" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/gotham_medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/button_main_green</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="style_spn_text" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/gotham_book</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:background">@drawable/background_with_border_main</item>
        <item name="android:padding">8dp</item>
        <item name="android:drawableEnd">@drawable/ic_baseline_expand_more_24</item>
    </style>

    <style name="style_label_text" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/gotham_book</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:padding">8dp</item>
    </style>

</resources>
